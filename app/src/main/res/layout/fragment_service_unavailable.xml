<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:background="@drawable/background_service_unavailable"
        android:id="@+id/message"
        android:textSize="22sp"
        android:textColor="@color/failure_text_color"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="150dp" />
    <Button
        android:id="@+id/button_fix"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:text="@string/service_unavailable_fix"
        android:textColor="@color/failure_text_color"
        android:layout_height="54dp"
        android:background="@drawable/button_warning" />

</LinearLayout>